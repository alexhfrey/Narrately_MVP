<% elsif action.actionable.class.name == "Tweet" %>
<div class="brandactions" style="background-image: url(http://static1.grsites.com/archive/textures/pink/pink037.gif); background-repeat-y;">
<%= link_to image_tag("twitterbird.png", :class => "fimg3"), new_action_taken_path(:id => action.id) %>
<%= simple_form_for @action_takes do |f| %>

	<p class="bluetitle"><%= @title %></p>
	<hr>
	<% if @post %>
		<p> <%= @post %> </p>
	<% end %>
	<% if @length %>
   <p> <%= f.input :message,  :input_html => {:maxlength => @length, :size => "50x5"}, :label => "Enter your message or comment" %> </p>
   <% end %>
  <p> <%= f.input :user_id, :as => :hidden, :input_html => {:value => @user.id }%> </p>
   
   <%= f.input :action_page_id, :as => :hidden, :value => @action.id %>
  
<br>
 <p> <%= f.submit @button, :class => "btn btn-success btn-large"	 %> </p>

 <% end %>
<h2>"Tweet this" says that bird...</h2>

