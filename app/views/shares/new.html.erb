<script type="text/javascript" charset="utf-8">
  window.twttr = (function (d,s,id) {
    var t, js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return; js=d.createElement(s); js.id=id;
    js.src="//platform.twitter.com/widgets.js"; fjs.parentNode.insertBefore(js, fjs);
    return window.twttr || (t = { _e: [], ready: function(f){ t._e.push(f) } });
  }(document, "script", "twitter-wjs"));

twttr.ready(function(twttr) {
twttr.events.bind('tweet', function(event) {
	var f = document.forms[0];
	var handle = event.data.screen_name;
	var tweet_id = event.data.tweet_id;
	document.getElementById("medium").value = "Twitter";
	document.getElementById("handle").value = handle;
	document.getElementById("share_id").value = tweet_id;
	f.submit();
	}
); });
</script>
<h1>Share and get rewards</h1>
<%= form_tag(project_shares_path(@project), :method => "post") do %> 
	<%= hidden_field_tag(:project_id, @project.id )%>	
	<%= hidden_field_tag(:medium, nil )%>
<% end %>

<p>Find me in app/views/actions/new.html.erb</p>

