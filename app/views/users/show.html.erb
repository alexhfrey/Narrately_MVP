<div class="grid_11 singleleft">
<% if current_user == @user %> 

<div class="myrewardsbox">
<div class="bigtitle">My Rewards</div>
<div class="lines"></div>
<div class="grid_12">
<ul class="mysharedprojects">
<% @shares .collect {|u| u.project } .each do |s| %>
<li>
<%= image_tag s.file1.medium.url.to_s %>
<span class="liveh1"><%= link_to s.project_title, s %></span>
<hr> 
<div class="boxdownload">
<span class="btn btn-success" align="center"><%= link_to "Download", download_project_path(s) %></span>
</div>
</li>
<% end %>
</ul>

</div>
</div>
<% end %>

<div class="myprojectbox">
<div class="bigtitle"><%= @current_user.first_name%>'s Projects</div>
<div class="lines"></div>
<div class="grid_12">
<ul class="mysharedprojects">
<% @projects.each do |p| %>
<li>
<%= render :partial => "shared/projects", :locals => { :user => @user, :p => p } %>
</li>
<% end unless @projects.nil? %>

</ul>
</div>
</div>
<div class="mysharesbox">
<div class="bigtitle"><%= @current_user.first_name%>'s Shares</div>
<div class="lines"></div>
<div class="grid_12">
<ul class="mysharedprojects">

<% @shares.each do |s| %>
<li>
<%= render :partial => "shared/projects", :locals => { :user => @user, :p => s.project } %>
</li>
<% end %>
</ul>

</div>
</div>
</div>
<div class="grid_4 righthome">

<div class="categorybox">
<div class="authordata">
<div class="grid_4">
<% if @user.profile_image.present? %>
<%= image_tag @user.profile_image, :title=> "facebook", :width=> "220", :height=> "220", :class=> "alignnone size-full wp-image-16236" %>
<% end %>
