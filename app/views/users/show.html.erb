<div class="container_16 padding50">
<div class="grid_16">
</div>


<div class="grid_11 singleleft">
<div class="myprojectbox">
<div class="bigtitle">My Projects</div>
<div class="lines"></div>
<div class="grid_12">
<ul class="mycreatedprojects">


<% @projects.each do |p| %>
<li>
<%= link_to image_tag(p.project_image.url, :class => "fimg2", :size => "248x162"), p %>
<% left = p.promotion_limit - p.shares.length %>
	<% if left > 0 && p.active   %>
	<span class="live"><span class="oldprice">LEFT</span><%= left %></span>
	<% elsif left == 0 && p.active %>
	<span class="goalmet"><span class="oldprice">GOAL</span>MET</span>
	<% else %>
	<span class ="pending"><span class="oldprice">PENDING</span></span>
	<% end %>
<%= link_to p.project_title, p, :class => "projecttitle" %>


</li>
<% end unless @projects.nil? %>
</ul>



</div>
</div>


<div class="mysharesbox">
<div class="bigtitle">My Shares</div>
<div class="lines"></div>
<div class="grid_12">
<ul class="mysharedprojects">

<% @shares.each do |s| %>
<li>
<% p = s.project %>
<%= link_to image_tag(p.project_image.url,:class => "fimg", :size => "248x162"), p %>
<span class="youveshared"><span class="oldprice">SHARED</span></span>	
<%= link_to p.project_title, p, :class => "projecttitle" %>
</li>
<% end unless @projects.nil? %>
</ul>

</div>
</div>





</div>
