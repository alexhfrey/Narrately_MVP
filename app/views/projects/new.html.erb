<h1>Create Project Page</h1>

<%= form_for(@project) do |f| %>
  <div class = "field">
	<%= f.hidden_field :user_id, :value => @user.id %>
   </div>
  <div class="field">
    <%= f.label :name, "Project name" %><br />
    <%= f.text_field :project_title %>
  </div>
  <div class="field">
    <%= f.label :description, "Describe your project" %><br />
    <%= f.text_area :description,  :size => "60x12" %>
	
  </div>
  <div class="field">
    <%= f.label :purchase_link %><br />
    <%= f.text_field :purchase_link %>
  </div>
  <div class="field"> 
  <%= f.label :output_file, "Reward File" %>
  <%= f.file_field :output_file %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<p>Find me in app/views/projects/new.html.erb</p>
