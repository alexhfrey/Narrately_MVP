<script type = "text/javascript">
$('#myTab').tab('show'); 
$(function () {
    $('.tabs a:last').tab('show')
  })

<%= stylesheet_link_tag "bootstrap.css" %>

<script type = "text/javascript">
function setValue(button, target) {

$(target).val(button.attr('name'));
button.closest('p').find('.btn-primary').removeClass('btn-primary');
button.addClass('btn-primary');

return false;
}

</script>

<div class="namebox">
<div class="programtitle"><%= @project.project_title %> <p>Members</p></div>  
</div>
<div class="programbox">
<ul class="nav nav-tabs">
  <li><%= link_to "Home", (@project), "data-toggle"=>"tab" %></li>
  <li><%= link_to "Actions", actions_project_path(@project), "data-toggle"=>"tab" %></li>
  <li><%= link_to "Members", backers_project_path(@project), "data-toggle"=>"tab" %></li>
     <% if @user == @creator %>
  <li><%= link_to "Edit", edit_project_path(@project), "data-toggle"=>"tab" %></li>
  <% end %>
  
  
</ul>
<%= render 'shared/error_messages' %>

<fieldset class = "control-group">

<%= simple_form_for @project, :validate => true, :html => { :multipart => true } do |f| %>


   <p> <%= f.input :project_title, :label => "A Catchy Title",  :input_html => { :class => 'text'} %> </p><p class="helptext">A catchy title that describes what your brand stands for.</p>
   <p> <%= f.input :brand_name, :label => "What's the name of your brand?",  :input_html => { :class => 'text'} %> </p><p class="helptext">The name of your organization is you're a business/non-profit. Your name if you're an author.</p>
   <p><%= f.input :short_description, :label => "Why is your brand cool?", :input_html => {:size => "15x4"}%> </p><p class="helptext">Keep it around 140 characters!</p>   
   <p><%= f.input :file1, :label => "Change Your Cover Image", :required => false%></p><p class="helptext">Use a creative photo! Ideal dimensions are 600px x 400px.  We accept JPEG and PNG for now with a maximum size of 2 MB.</p>
   <p> <%= image_tag @project.file1_url(:medium) %>
     <%= f.hidden_field :file1_cache %> </p>
   <p><%= f.input :description, :label => "Describe fan club (Why Join, who should join, etc.)", :input_html => {:size => "20x11"}%> </p><p class="helptext">What does your brand stand for? Top 3 values?</p>   
	
   <p> <%= f.input :video, :label => "Add a Youtube video (optional)"%> </p><p class="helptext">This is optional, videos tell a great story! Just enter the Youtube link here.</p>      


   <p> <%= f.input :file2, :required => false, :label => "Give a reward to new ambassadors (optional)"%> </p><p class="helptext">Examples include ebooks, digital coupon, etc. Please keep the file size below 10 MB.</p>
   <p> <%= f.input :promotion_description, :label => "What is it you are giving away?", :input_html => {:size => "15x3"}%></p><p class="helptext">In exchange for joining your ambassador program, this is what fans will receive</p>
   <%= f.hidden_field :file2_cache %>
<br>

 <p> <%= f.submit :class => "btn btn-success btn-large"	 %> </p>

 <% end %>


</div>



